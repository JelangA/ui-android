<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"/>
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingTop="5dp"

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtnama3"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"/>
        <TextView
            android:id="@+id/txtharga3"
            android:layout_marginLeft="20dp"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RP. 17000"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btntambah3"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_add_circle_outline_24"/>
            <TextView
                android:id="@+id/txtjumlah3"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"/>
            <ImageView
                android:id="@+id/btnkurang3"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_remove_circle_outline_24"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:gravity="right"
        android:paddingTop="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/txtid3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txtStars3"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* 4,5"/>

        <Button
            android:id="@+id/btnAdd3"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:drawableBottom="@drawable/ic_baseline_shopping_cart_24"/>
    </LinearLayout>

</LinearLayout>